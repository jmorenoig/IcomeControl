@model IcomeControl.Models.IcomeMoney

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>
<h3>¿Estás segura de que quieres eliminar esto?</h3>
<hr />
<div class="card border-danger mb-3">
    <div class="card-header">Caregoría</div>
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.NameCategory)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Value)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Value)
            </dd>
        </dl>

        <div class="form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
            </form>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-outline-dark" asp-action="Index">Regresar a la Lista</a>
</div>
