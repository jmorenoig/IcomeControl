@model IcomeControl.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>
<hr />
<div class="card border-primary mb-3">
    <div class="card-header">Caregoría</div>
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NameCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NameCategory)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Type == "IN")
                {
                    <p>Ingreso</p>
                }
                else
                {
                    <p>Gasto</p>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @if (Model.State == true)
                {
                    <p class="btn btn-outline-dark">Activo</p>
                }
                else
                {
                    <p class="btn btn-outline-warning">Inactivo</p>
                }
            </dd>
        </dl>
    </div>
</div>

    <div>
        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a class="btn btn-outline-dark" asp-action="Index">Regresar a la Lista</a>
    </div>
